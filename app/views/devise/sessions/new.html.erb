<div class="col-lg-5 col-lg-offset-4 col-md-5 col-md-offset-4 panel">
  <h2>Sign in</h2>
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
    <%= f.email_field :email, :class => 'form-control', :autofocus => true %></div>
  
  <div><%= f.label :password %><br />
    <%= f.password_field :password, :class => 'form-control' %></div>
  
  <% if devise_mapping.rememberable? %>
  <div class="checkbox">
    <label>
      <%= f.check_box :remember_me  %> Remember me?
    </label>
  </div>
  <% end %>
  
  <div><%= f.submit "Sign in", :class => 'btn btn-success' %></div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
